{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Jwt": {
    "Issuer": "fitverse-auth",
    "Audience": "fitverse-web",
    "Key": "YOUR-VERY-LONG-256BIT-SECRET-CHANGE-ME",
    "AccessTokenMinutes": 10,
    "EmailTokenMinutes": 30,
    "ResetTokenMinutes": 30
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=defaultdb;Username=postgres;Password=password"
  },
  "AwsS3": {
    "AccessKey": "",
    "SecretKey": "",
    "BucketName": "fitverse-dev",
    "Region": "ap-southeast-1",
    "ServiceUrl": "",
    "UseForcePathStyle": true
  },
  "DatabaseConfigurations": {
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },
  "VNPay": {
    "TmnCode": "YOUR_VNPAY_TMN_CODE",
    "HashSecret": "YOUR_VNPAY_HASH_SECRET",
    "BaseUrl": "YOUR_VNPAY_BASE_URL",
    "ReturnUrl": "YOUR_VNPAY_RETURN_URL",
    "IpnUrl": "YOUR_VNPAY_IPN_URL"
  }
}
