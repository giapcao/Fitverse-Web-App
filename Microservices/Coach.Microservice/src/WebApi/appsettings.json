  {
    "Serilog": {
      "Using": [
        "Serilog.Sinks.Console",
        "Serilog.Sinks.File"
      ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Information",
          "System": "Information"
        }
      },
      "WriteTo": [
        {
          "Name": "Console"
        }
      ],
      "Enrich": [
        "FromLogContext",
        "WithMachineName",
        "WithThreadId"
      ]
    },

  "ConnectionStrings": {
    "DefaultConnection": "default"
  },
  "DatabaseConfigurations": {
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "fitverse-auth",
    "Audience": "fitverse-web",
    "Key": "YOUR-VERY-LONG-256BIT-SECRET-CHANGE-ME",
    "AccessTokenMinutes": 10,
    "EmailTokenMinutes": 30,
    "ResetTokenMinutes": 30
  },
  "AwsS3": {
    "AccessKey": "",
    "SecretKey": "",
    "BucketName": "fitverse-dev",
    "Region": "ap-southeast-1",
    "ServiceUrl": "",
    "UseForcePathStyle": true
  },
  "AllowedHosts": "*"
}
