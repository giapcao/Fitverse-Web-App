{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "my-auth-service",
    "Audience": "my-api",
    "Key": "mykey"
  },
  "ReverseProxy": {
    "Transforms": [
      { "RequestHeader": "X-Forwarded-Host", "Set": "{request-header:Host}" },
      { "RequestHeader": "X-Forwarded-Proto", "Set": "{scheme}" }
    ],
    "Routes": {
      "auth-swagger-route": {
        "ClusterId": "auth-cluster",
        "Order": 0,
        "Match": { "Path": "/api/auth/swagger/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/auth" }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Order": 1,
        "Match": { "Path": "/api/auth/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/auth" }
        ]
      },
      "role-route": {
        "ClusterId": "auth-cluster",
        "Order": 1,
        "Match": { "Path": "/api/roles/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/roles" }
        ]
      },
      "admin-route": {
        "ClusterId": "auth-cluster",
        "Order": 1,
        "Match": { "Path": "/api/adminauditlogs/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/adminauditlogs" }
        ]
      },
      "user-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/users/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/users" }
        ]
      },
      "guest-route": {
        "ClusterId": "guest-cluster",
        "Match": { "Path": "/api/guest/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/guest" }
        ]
      },
      "coach-swagger-route": {
        "ClusterId": "coach-cluster",
        "Order": 0,
        "Match": { "Path": "/api/coach/swagger/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/coach" },
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/coach" }
        ]
      },
      "coachprofile-route": {
        "ClusterId": "coach-cluster",
        "Order": 1,
        "Match": { "Path": "/api/coachprofiles/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/coachprofiles" }
        ]
      },
      "coachcertification-route":  {
        "ClusterId":  "coach-cluster",
        "Order":  1,
        "Match":  {  "Path":  "/api/coachcertifications/{**catch-all}" },
        "Transforms":  [
          { "RequestHeader":  "X-Forwarded-Prefix", "Set":  "/api/coachcertifications"  }
        ]
      },
      "coachmedia-route":  {
        "ClusterId":  "coach-cluster",
        "Order":  1,
        "Match":  {   "Path":  "/api/coachmedia/{**catch-all}"  },
        "Transforms":  [
          { "RequestHeader":  "X-Forwarded-Prefix", "Set":  "/api/coachmedia"   }
        ]
      },
      "coachservice-route":  {
        "ClusterId":  "coach-cluster",
        "Order":  1,
        "Match":  {   "Path":  "/api/coachservices/{**catch-all}"  },
        "Transforms":  [
          { "RequestHeader":  "X-Forwarded-Prefix", "Set":  "/api/coachservices"  }
        ]
      },
      "kycrecord-route":  {
        "ClusterId":  "coach-cluster",
        "Order":  1,
        "Match":  {   "Path":  "/api/kycrecords/{**catch-all}"  },
        "Transforms":  [
          { "RequestHeader":  "X-Forwarded-Prefix", "Set":  "/api/kycrecords"   }
        ]
      },
      "sport-route":  {
        "ClusterId":  "coach-cluster",
        "Order":  1,
        "Match":  {   "Path":  "/api/sports/{**catch-all}"   },
        "Transforms":  [
          { "RequestHeader":  "X-Forwarded-Prefix", "Set":  "/api/sports"    }
        ]
      },
      "payment-swagger-route": {
        "ClusterId": "payment-cluster",
        "Order": 0,
        "Match": { "Path": "/api/payment/swagger/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/payment" },
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/payment" }
        ]
      },
      "payments-route": {
        "ClusterId": "payment-cluster",
        "Order": 1,
        "Match": { "Path": "/api/payments/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/payments" }
        ]
      },
      "wallets-route": {
        "ClusterId": "payment-cluster",
        "Order": 1,
        "Match": { "Path": "/api/wallets/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/wallets" }
        ]
      },
      "walletbalances-route": {
        "ClusterId": "payment-cluster",
        "Order": 1,
        "Match": { "Path": "/api/walletbalances/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/walletbalances" }
        ]
      },
      "walletjournals-route": {
        "ClusterId": "payment-cluster",
        "Order": 1,
        "Match": { "Path": "/api/walletjournals/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/walletjournals" }
        ]
      },
      "walletledgerentries-route": {
        "ClusterId": "payment-cluster",
        "Order": 1,
        "Match": { "Path": "/api/walletledgerentries/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/walletledgerentries" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "d1": { "Address": "http://authentication-microservice:5036/" }
        }
      },
      "users-cluster": {
        "Destinations": {
          "d1": { "Address": "http://user-microservice:5002/" }
        }
      },
      "guest-cluster": {
        "Destinations": {
          "d1": { "Address": "http://guest-microservice:5001/" }
        }
      },
      "coach-cluster": {
        "Destinations": {
          "d1": { "Address": "http://coach-microservice:5011/" }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "d1": { "Address": "http://payment-microservice:5037/" }
        }
      }
    }
  }
}
