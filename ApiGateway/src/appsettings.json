{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "my-auth-service",
    "Audience": "my-api",
    "Key": "mykey"
  },
  "ReverseProxy": {
    "Transforms": [
      { "RequestHeader": "X-Forwarded-Host", "Set": "{request-header:Host}" },
      { "RequestHeader": "X-Forwarded-Proto", "Set": "{scheme}" }
    ],
    "Routes": {
      "auth-swagger-route": {
        "ClusterId": "auth-cluster",
        "Order": 0,
        "Match": { "Path": "/api/auth/swagger/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/auth" }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Order": 1,
        "Match": { "Path": "/api/auth/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/auth" }
        ]
      },
      "user-route": {
        "ClusterId": "users-cluster",
        "Match": { "Path": "/api/user/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/user" }
        ]
      },
      "guest-route": {
        "ClusterId": "guest-cluster",
        "Match": { "Path": "/api/guest/{**catch-all}" },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Prefix", "Set": "/api/guest" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "d1": { "Address": "http://authentication-microservice:5036/" }
        }
      },
      "users-cluster": {
        "Destinations": {
          "d1": { "Address": "http://user-microservice:5002/" }
        }
      },
      "guest-cluster": {
        "Destinations": {
          "d1": { "Address": "http://guest-microservice:5001/" }
        }
      }
    }
  }
}
